<div class="auth"></div>
<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s6"><a class="active" href="#login">Authorization</a></li>
            <li class="tab col s6"><a href="#register">Registration</a></li>
        </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
        {{#if loginError}}
        <p class="alert">{{loginError}}</p>
        {{/if}}
        <h1>Sign in to Shop</h1>
        <form action="/auth/login" method="POST">
            <div class="input-field">
                <input id="email" name="email" type="email" class="validate" required>
                <label for="email">E-Mail</label>
                <span class="helper-text" data-error="E-mail input"></span>
            </div>

            <div class="input-field">
                <input id="password" name="password" type="password" class="validate" required>
                <label for="password">Password</label>
                <span class="helper-text" data-error="Input price"></span>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">

            <p><a href="/auth/reset">Have you forgotten your password?</a></p>
            <button class="btn btn-primary" type="submit">Enter</button>
        </form>
    </div>



    <div id="register" class="col s6 offset-s3">
        {{#if registerError}}
        <p class="alert">{{registerError}}</p>
        {{/if}}
        <h1>Create an account</h1>
        <form action="/auth/register" method="POST" novalidate>
            <div class="input-field">
                <input id="remail" name="email" type="email" class="validate" required>
                <label for="remail">E-Mail</label>
                <span class="helper-text" data-error="E-mail input"></span>
            </div>

            <div class="input-field">
                <input id="rpassword" name="password" type="password" class="validate" required>
                <label for="rpassword">Password</label>
                <span class="helper-text" data-error="Input price"></span>
            </div>

            <div class="input-field">
                <input id="confirm" name="confirm" type="password" class="validate" required>
                <label for="confirm">Repeat password</label>
                <span class="helper-text" data-error="Input price"></span>
            </div>

            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" required>
                <label for="name">Your name</label>
                <span class="helper-text" data-error="Your name"></span>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="btn btn-primary" type="submit">Create account</button>
        </form>
    </div>
</div>